<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.canvas.Canvas?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="student.honig.roey.DrawShapesController">
    <top>
        <ToolBar>
            <Button fx:id="drawShapesButton" text="Draw Shapes" onAction="#drawShapesButtonPressed"/>
        </ToolBar>
    </top>
    <left>
        <Region prefWidth="0" />
    </left>
    <center>
        <Canvas fx:id="drawShapesCanvas" width="600" height="600"></Canvas>
    </center>
    <right>
        <Region prefWidth="0" />
    </right>
    <bottom>
        <Region prefHeight="0" />
    </bottom>
</BorderPane>